<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_redondo_preto_top">

    <TextView
        android:id="@+id/buttonAddTab"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/colorBrancoGelo"
        android:textSize="16sp" />

        <ImageButton
            android:id="@+id/buttonCloseTab"
            android:layout_width="40dp"
            android:layout_height="45dp"

            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:contentDescription="TODO"
            android:src="@drawable/ic_outline_close_24" />

    <EditText
        android:id="@+id/editTextAddTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/novaCategoria"
        android:inputType="textPersonName"
        android:textColor="@color/colorBranco"
        android:textColorHint="@color/colorCinza2" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>